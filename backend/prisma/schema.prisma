generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AudioCategory {
  Music
  Recording
  Sound
  Other
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  audios    Audio[]
}

model Audio {
  id           Int      @id @default(autoincrement())
  filename     String
  originalname String
  description  String
  category     AudioCategory
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)  // cascading delete if user is deleted
  userId       Int
  createdAt    DateTime @default(now())
}